# SmartEM Decisions - Production Environment Configuration
# Copy this file to .env.production and replace placeholder values with real credentials

# PostgreSQL Configuration
POSTGRES_USER=your_postgres_username
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=30432
POSTGRES_DB=smartem_db

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_USER=your_rabbitmq_username
RABBITMQ_PASSWORD=your_secure_rabbitmq_password
RABBITMQ_PORT=30672
RABBITMQ_UI_PORT=15672

# Adminer Configuration
ADMINER_PORT=8080

# HTTP API Configuration
HTTP_API_PORT=8000

# Docker/GHCR Credentials (required for pulling images)
DOCKER_USERNAME=your_github_username
DOCKER_EMAIL=your_email@example.com
DOCKER_PASSWORD=your_github_token_or_use_gh_auth_token

# CORS Configuration (comma-separated list of allowed origins)
# For production, ONLY specify exact trusted origins
# Example: "https://app.example.com,https://admin.example.com"
CORS_ALLOWED_ORIGINS=https://app.example.com
