# SmartEM Decisions - Staging Environment Configuration
# Copy this file to .env.staging and replace placeholder values with real credentials

# Docker/GHCR credentials for container registry access
DOCKER_USERNAME=your_github_username
DOCKER_EMAIL=your_email@example.com
DOCKER_PASSWORD=your_github_token_or_use_gh_auth_token

# Database configuration (used for K8s ConfigMap and Secrets)
POSTGRES_HOST=postgres-service
POSTGRES_PORT=5432
POSTGRES_DB=smartem_db
POSTGRES_USER=your_postgres_username
POSTGRES_PASSWORD=your_secure_postgres_password

# RabbitMQ configuration (used for K8s ConfigMap and Secrets)
RABBITMQ_HOST=rabbitmq-service
RABBITMQ_PORT=5672
RABBITMQ_USER=your_rabbitmq_username
RABBITMQ_PASSWORD=your_secure_rabbitmq_password

# HTTP API configuration
HTTP_API_PORT=8000
ADMINER_PORT=8080

# CORS configuration (comma-separated list of allowed origins)
# For staging, specify exact origins for security
# Example: "https://staging.example.com,https://staging-app.example.com"
CORS_ALLOWED_ORIGINS=https://staging.example.com
